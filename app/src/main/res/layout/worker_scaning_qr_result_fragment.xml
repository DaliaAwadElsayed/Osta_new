<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<ScrollView
    android:layout_marginTop="@dimen/_48sdp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteColor"
        android:orientation="vertical"
        tools:context="com.dtag.sal7ha.Fragment.main.user.scaning.WorkerScaningQrResultFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/basicColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_margin="@dimen/very_small_margin"
                android:scaleType="centerCrop"
              />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/very_small_margin"
                android:layout_marginTop="@dimen/very_small_margin"
                android:layout_marginEnd="@dimen/very_small_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/very_small_margin"
                    android:text="Dalia Awad"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/medum_text_size" />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/very_small_margin"
                    android:text="carpenter"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/medum_text_size" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/very_small_margin"
                    android:text="Obour-Qalupia"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/medum_text_size" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scanbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/small_margin"
            android:backgroundTint="@color/basicColor"
            android:text="@string/gotoorder"
            android:textColor="@color/whiteColor"
            app:cornerRadius="@dimen/small_margin" />
    </LinearLayout>

</ScrollView>
</layout>
