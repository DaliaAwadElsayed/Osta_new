<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/medium_margin"
            tools:context=".Fragment.AboutAppFragment">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBarId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:minHeight="?attr/actionBarSize"
                app:titleTextColor="@color/black">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:text="@string/aboutapp"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/backId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_keyboard_backspace_24" />

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/aboutsal7ha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:fontFamily="@font/urw_geometric_arabic_regular"
                android:background="@drawable/border_white_rounded"
                android:elevation="@dimen/_10sdp"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/very_small_margin"
                android:text="@string/aboutapp"
                android:textColor="@color/black"
                android:textSize="@dimen/medum_text_size"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progress1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin">

                <TextView
                    android:id="@+id/aboutsal7haexpand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/very_small_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medum_text_size"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </ScrollView>

            <TextView
                android:id="@+id/usageway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:background="@drawable/border_white_rounded"
                android:elevation="@dimen/_10sdp"
                android:gravity="center"
                android:padding="@dimen/very_small_margin"
                android:fontFamily="@font/urw_geometric_arabic_regular"
                android:text="@string/useageway"
                android:textColor="@color/black"
                android:textSize="@dimen/medum_text_size"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin">

                <TextView
                    android:id="@+id/usageexpand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/very_small_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medum_text_size"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </ScrollView>

            <TextView
                android:id="@+id/policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:background="@drawable/border_white_rounded"
                android:elevation="@dimen/_10sdp"
                android:gravity="center"
                android:padding="@dimen/very_small_margin"
                android:text="@string/policy"
                android:fontFamily="@font/urw_geometric_arabic_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/medum_text_size"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progress3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin">

                <TextView
                    android:id="@+id/policyexpand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/very_small_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medum_text_size"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </ScrollView>

            <TextView
                android:id="@+id/shareopinion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:background="@drawable/border_white_rounded"
                android:elevation="@dimen/_10sdp"
                android:gravity="center"
                android:padding="@dimen/very_small_margin"
                android:text="@string/shareopinion"
                android:textColor="@color/black"
                android:fontFamily="@font/urw_geometric_arabic_regular"
                android:textSize="@dimen/medum_text_size"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>
</layout>
