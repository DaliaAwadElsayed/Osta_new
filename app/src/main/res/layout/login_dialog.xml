<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_margin="@dimen/small_margin"
        android:id="@+id/background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bk"
        android:orientation="vertical">

        <LinearLayout
            android:background="@color/basicColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
      >

            <ImageView
                android:id="@+id/imgcanceldialog"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_clear_black_24dp" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/medium_margin"
            android:id="@+id/textdialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:gravity="center"
            android:text="@string/youhavetosignin"
            android:textAlignment="center"
            android:fontFamily="@font/urw_geometric_arabic_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/medum_text_size"
            />
        <EditText
            android:id="@+id/phoneNumberDailog"
            android:layout_width="match_parent"
            android:layout_height="@dimen/phone_input_height"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittext_worker_border_grey"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:hint="@string/phoneoremail"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/medum_text_size"
            />

        <EditText
            android:id="@+id/passwordDialog"
            android:layout_width="match_parent"
            android:layout_height="@dimen/phone_input_height"
            android:layout_marginStart="24dp"
            android:layout_marginTop="@dimen/very_small_margin"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edittext_worker_border_grey"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/medum_text_size"
            />
        <ProgressBar
            android:visibility="gone"
            android:layout_margin="@dimen/very_small_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressdialog"
            android:layout_gravity="center"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_margin="@dimen/very_small_margin"
            android:id="@+id/logindialog"
            android:textAllCaps="false"
            app:cornerRadius="@dimen/very_small_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/login"
            />
        <TextView
            android:layout_marginBottom="@dimen/very_small_margin"
            android:textSize="@dimen/medum_text_size"
            android:id="@+id/registerIdDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registerationOrder"
            android:textColor="@color/basicColor"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
</layout>
