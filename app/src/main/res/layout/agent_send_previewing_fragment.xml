<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_marginTop="@dimen/_48sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.dtag.sal7ha.Fragment.main.agent.AgentSendPreviewingFragment">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/very_small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginEnd="@dimen/very_small_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:background="@drawable/customborder"
                android:orientation="vertical"
                android:outlineSpotShadowColor="@color/basicColor"
                android:stretchMode="spacingWidthUniform"
                android:verticalSpacing="@dimen/small_margin">

                <TextView
                    android:id="@+id/nametext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/workernname"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/phonetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/phoneNumber"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/visitdatetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/visitdate"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/visittimetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/visittime"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addresstext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/address"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descrptiontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="6"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/descrption"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/previewtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="7"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/previewing"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/visitfeetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="8"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/examinationfee"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/costtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="9"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/cost"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/canceltext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="10"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/very_small_margin"
                    android:text="@string/paymentway"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />
                <!--><-->
                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowSpan="15"
                    android:layout_rowWeight="2"
                    android:layout_column="1"
                    android:layout_marginStart="@dimen/medium_margin"
                    android:layout_marginEnd="@dimen/medium_margin"
                    android:background="@color/basicColor" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="6"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/phoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="6"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="6"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="6"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="6"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descrption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="6"
                    android:layout_column="6"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="7"
                    android:layout_column="6"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/visitfee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="8"
                    android:layout_column="6"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="9"
                    android:layout_column="6"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="10"
                    android:layout_column="6"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/very_small_margin"
                    android:textColor="@color/basicColor"
                    android:textStyle="bold" />
            </GridLayout>

            <com.google.android.material.button.MaterialButton
               app:cornerRadius="@dimen/medium_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/sendapreview"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor" />
        </LinearLayout>

    </ScrollView>

</layout>
