<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ratingWorkerLinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_dialog_bk"
    android:orientation="vertical">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/large_margin"
        android:text="@string/rateworkerplease"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/medum_text_size" />

    <RatingBar
        android:id="@+id/rateworkerdialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginBottom="@dimen/medium_margin" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/small_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/doneDialogRateWorker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/very_small_margin"
            android:layout_marginEnd="@dimen/very_small_margin"
            android:backgroundTint="@color/whiteColor"
            android:text="@string/done"
            android:textColor="@color/basicColor" />

        <Button
            android:id="@+id/cancelDialogRateWorker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/very_small_margin"
            android:layout_marginEnd="@dimen/very_small_margin"
            android:backgroundTint="@color/whiteColor"
            android:text="@string/cancel"
            android:textColor="@color/basicColor" />
    </LinearLayout>

</LinearLayout>