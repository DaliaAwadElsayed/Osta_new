<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bk"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sendcanceldialog"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/ic_baseline_cancel_24" />


        </LinearLayout>
        <EditText
            android:textColorHint="@color/black"
            android:hint="@string/previewing"
            android:id="@+id/previewDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginTop="@dimen/very_small_margin"
            android:padding="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@drawable/edittext_agent_preview"
            android:inputType="textPersonName"
            android:singleLine="true" />

        <EditText
            android:textColorHint="@color/black"
            android:hint="@string/cost"
            android:id="@+id/costDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginTop="@dimen/very_small_margin"
            android:padding="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@drawable/edittext_agent_preview"
            android:inputType="textPersonName"
            android:singleLine="true" />
        <Button
            android:layout_gravity="center"
            android:id="@+id/sendPreviewDialogId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/basicColor"
            android:text="@string/send"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="22dp"
            android:background="#fff" />
    </LinearLayout>
</layout>
