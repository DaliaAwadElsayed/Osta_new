<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/materialButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:text="@string/worker"
                android:textAllCaps="false"
                android:visibility="gone"
                app:cornerRadius="@dimen/medium_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBarId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:minHeight="?attr/actionBarSize"
                app:titleTextColor="@color/black">


                <ImageView
                    android:id="@+id/backId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_keyboard_backspace_24"
                    android:tint="@color/black" />

            </androidx.appcompat.widget.Toolbar>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_32sdp"
                android:src="@drawable/splash" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/urw_geometric_arabic_regular"
                android:gravity="center"
                android:text="@string/haveproblem"
                android:textColor="@color/black"
                android:textSize="@dimen/medum_text_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/phonenumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/phone_input_height"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:fontFamily="@font/urw_geometric_arabic_regular"
                android:foregroundGravity="center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/phoneoremail"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/basicColor"
                android:textColorHint="@color/quantum_grey"
                android:textSize="@dimen/medum_text_size" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/phone_input_height"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:fontFamily="@font/urw_geometric_arabic_regular"
                android:foregroundGravity="center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/basicColor"
                android:textColorHint="@color/quantum_grey"
                android:textSize="@dimen/medum_text_size" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/enter"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/phone_input_height"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/medium_margin"
                android:background="@color/basicColor"
                android:fontFamily="@font/urw_geometric_arabic_regular"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold"
                app:cornerRadius="@dimen/corner_more_radius" />

            <TextView
                android:id="@+id/forgetpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/urw_geometric_arabic_regular"
                android:text="@string/forgetpassword"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/registertextviewcustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/urw_geometric_arabic_regular"
                android:foregroundGravity="center_horizontal"
                android:gravity="center"
                android:text="@string/registeration"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/urw_geometric_arabic_regular"
                android:text="@string/way_login"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/faceId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_facebook" />

                <LinearLayout
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/googleId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_google" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/samoola" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/urw_geometric_arabic_regular"
                    android:text="@string/signinasworker"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>
