<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout

    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/black">

        <ImageView
            android:id="@+id/backId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            android:tint="@color/black" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/text_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_18sdp"
        android:gravity="center"
        android:text="@string/you_have_problem"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="center"
        android:text="@string/entertheverificationcode"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_18sdp"
        android:background="@drawable/edittext_worker_border_grey"
        android:gravity="center"
        android:paddingStart="@dimen/_12sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="18sp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_marginRight="16dp"
        android:backgroundTint="@color/basicColor"
        android:text="@string/verify"
        android:textAllCaps="false"
        android:textColor="#fff"
        app:cornerRadius="@dimen/very_small_margin" />
    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:id="@+id/sendagainlinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
>

        <TextView
            android:id="@+id/sendagain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sendagainwithinseconds"
            android:textColor="@color/basicColor"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/very_small_text_size"
            android:layout_marginEnd="@dimen/very_small_text_size"
            android:foregroundGravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/basicColor"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/seconds"
            android:textColor="@color/basicColor"
            android:textSize="@dimen/small_text_size" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_180sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_32sdp"
        android:src="@drawable/samoola" />
</LinearLayout>
</layout>

