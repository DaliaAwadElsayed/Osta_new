<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:background="@drawable/background"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_margin"
                android:src="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/urw_geometric_arabic_regular"
                android:foregroundGravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/haveproblem"
                android:textColor="@color/black"
                android:textSize="@dimen/medum_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medum_text_size"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginRight="@dimen/medum_text_size"
                android:fontFamily="@font/urw_geometric_arabic_regular"
                android:foregroundGravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/entertheverificationcode"
                android:textColor="@color/black"
                android:textSize="@dimen/medum_text_size"
                app:layout_constraintEnd_toEndOf="@+id/phonenumber"
                app:layout_constraintStart_toStartOf="@+id/phonenumber"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <EditText
                android:id="@+id/phonenumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/phone_input_height"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edittext_worker_border_grey"
                android:foregroundGravity="center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/verificationcode"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/medum_text_size"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/enter"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/phone_input_height"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@color/basicColor"
                android:fontFamily="@font/urw_geometric_arabic_regular"
                android:text="@string/verify"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/large_text_size"
                app:cornerRadius="@dimen/corner_more_radius"
                app:layout_constraintEnd_toEndOf="@+id/phonenumber"
                app:layout_constraintStart_toStartOf="@+id/phonenumber"
                app:layout_constraintTop_toBottomOf="@+id/phonenumber" />

            <LinearLayout
                android:id="@+id/sendagainlinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/enter"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="@+id/enter"
                app:layout_constraintTop_toBottomOf="@+id/enter">

                <TextView
                    android:id="@+id/sendagain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/sendagainwithinseconds"
                    android:textColor="@color/basicColor"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/very_small_text_size"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/very_small_text_size"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center"
                    android:textColor="@color/basicColor"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:id="@+id/second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/seconds"
                    android:textColor="@color/basicColor"
                    android:textSize="@dimen/small_text_size" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
