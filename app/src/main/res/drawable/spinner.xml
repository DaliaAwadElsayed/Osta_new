<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="2dp"  android:color="@color/basicColor" />
                    <corners android:radius="16dp" />
                    <padding
                        android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                </shape>
            </item>

            <item android:left="5dp" android:right="15dp">
                <bitmap android:gravity="left" android:src="@drawable/menu"
                    android:tint="@color/basicColor"/>
            </item>
        </layer-list>
    </item>
</selector>